{
    "version": "1.0",
    "configurations": [
        {
            "name": "Default debugging: project",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/app/",
            "args": [],
            "pythonPath": "${workspaceFolder}/envs/algobin/python.exe"
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "pythonPath": "${workspaceFolder}/envs/algobin/python.exe"
        },
        {
            "name": "Anaconda: bokeh",
            "type": "python",
            "request": "launch",
            "module": "bokeh",
            "console": "integratedTerminal",
            "args": ["serve", "${workspaceFolder}/app/", "--show"],
            "pythonPath": "${config:python.pythonPath}"
        },
    ]
}